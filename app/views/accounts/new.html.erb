<div class="col-md-4 col-md-offset-4">
  <h2 class="text-center">Register</h2>
  
  <% if flash[:notice].present? %>
    <div class="alert alert-info">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_for @user, url: register_path do |f| %>
    <div class="form-group">
      <%= f.label :fullname %>
      <%= f.text_field :fullname, class: 'form-control input-sm' %>
    </div>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control input-sm' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control input-sm' %>
    </div>
    <%= f.submit "Register", class: 'btn btn-sm btn-primary' %>
    <%= link_to "Back", homes_path, class: 'btn btn-sm btn-default' %>
  <% end %>
</div>
