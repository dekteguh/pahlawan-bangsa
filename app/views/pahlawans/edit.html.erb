 <div class="col-md-5">
    <div class="panel panel-primary">
      <div class="panel-header"><h3 class="text-center">Input Pahlawan</h3></div>
      <div class="panel-body">
        <%= form_for @pahlawan do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= f.label :place %>
            <%= f.text_field :place, class: 'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= f.label :birth %>
            <%= f.text_field :birth, class: 'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= f.label :photo %>
            <%= f.text_field :photo, class: 'form-control input-sm' %>
          </div>
          <%= f.submit "Update Pahlawan", class: 'btn btn-sm btn-success' %>
        <% end %>
      </div>
    </div>

